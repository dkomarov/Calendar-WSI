<title>Appointment List</title>

<body>
  <nav id="navID">
    <input type="checkbox" id="nav-menu">
    <label for="nav-menu">
      <i class="fas fa-bars" id="sign-one"></i>
        <i class="fas fa-times" id="sign-two"></i>
       </label>
       <h1><a class="logo" id="logo-link" href="/menu"><img class="logo view-appointment" src="/images/logo.png" height="50" width="179" alt="appt-logo"/></a></h1>
      <ul>
        <li><a href="/appointment"><span id="create-appointment"></span>Create Appointment</a></li>
        <li><a class="logout-btn" href="/auth/logout"><span id="logout-icon"></span>Logout</a></li>
      </ul>
  </nav>

<section class="appointment-list" >
  <h1>Upcoming Events</h1>
  <section style="overflow-x: auto; margin: 10px;"> 
  <table class="table-css">
    <thead>
      <tr>
        <th>#</th>
        <th>Event Name</th>
        <th>Event start</th>
        <th>Event End</th>
        <th colspan="2">Manage Events</th>
      </tr>
    </thead>
    <tbody id="tbody-view-appt">
      <%var count = 0%>
      <% events.forEach(function (eve) { %>
      <%count++%>
      <tr>
        <td><%=count%></td>
        <td><%= eve.summary%></td>
        <td style="text-align: left;"><b>Date:</b> <%= new Date(eve.start).toLocaleString('en-US').substring(0,9) %><br><b>Time:</b> <%= new Date(eve.start).toLocaleString('en-US').substring(10, 22) %> </td>
        <td style="text-align: left;"><b>Date:</b> <%= new Date(eve.end).toLocaleString('en-US').substring(0,9) %><br><b>Time:</b> <%= new Date(eve.end).toLocaleString('en-US').substring(10, 22) %> </td>
        <td><a href='/appointment/view-appointment/update/<%= eve._id %>/<%= eve.event_id %>'><input type="button" class="btn"value="Edit" /></a></td>
        <td><%- include('partials/deleteForm', { url: `/appointment/view-appointment/delete/${eve._id}/${eve.event_id}` }) %></td>
      </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
</section>

