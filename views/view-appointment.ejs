<title>Appointment List</title>

<body>
  <nav id="navID">
    <input type="checkbox" id="nav-menu">
    <label for="nav-menu">
      <i class="fas fa-bars" id="sign-one"></i>
        <i class="fas fa-times" id="sign-two"></i>
       </label>
      <h1><a class="logo" id="logo-link" href="/menu"><img class="logo view-appointment" src="/images/logo.png"
        alt="appt-logo"></a></h1>
      <ul>
        <li><a href="/appointment"><span id="create-appointment"></span>Create Appointment</a></li>
        <li><a class="logout-btn" href="/auth/logout"><span id="logout-icon"></span>Logout</a></li>
      </ul>
  </nav>

<section class="appointment-list" >
  <h1>Upcoming Events</h1>
  <section style="overflow-x: auto; margin: 10px;"> 
  <table class="table-css">
    <thead>
      <tr>
        <th>#</th>
        <th>Event Name</th>
        <th>Event start</th>
        <th>Event End</th>
        <th colspan="2">Manage Events</th>
      </tr>
    </thead>
    <tbody id="tbody-view-appt">
      <%var count = 0%>
      <% events.forEach(function (eve) { %>
      <%count++%>
      <tr>
        <td><%=count%></td>
        <td><%= eve.summary%></td>
        <td style="text-align: left;"><b>Date:</b> <%= eve.start.substring(0, 10)%><br><b>Time:</b> <%= eve.start.substring(12, 19)%> Hrs </td>
        <td style="text-align: left;"><b>Date:</b> <%= eve.end.substring(0, 10)%><br><b>Time:</b> <%= eve.end.substring(12, 19)%> Hrs </td>
        <td><a href="/appointment/view-appointment/update/<%= eve._id%>"><input type="submit" class="btn"value="Edit" /></a></td>
        <td><input type="button" class="btn" onclick="del('<%= eve.event_id%>','<%= eve.summary%>')" value="Delete" />
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
</section>

