<% if(success == 'success'){%>
<section class="alert">
  <strong>Appointment booked successfully!</strong>
</section>
<%}else if(success == 'fail'){%>
<section class="alert red-alert">
  <strong>Error while creating Event</strong>
</section>
  <%}%>
<section id="appointmentForm">
  <h1>Welcome, <%=user.userName%></h1>
  <form method="post" action="/appointment" id="formVal">
  <h3>Appointment Form</h3>
  <table id="form">
    <tr>
      <td><input type="text" id="summary" name="summary" placeholder="Event Summary"></td>
    </tr>
    <tr>
      <td><input type="text" id="location" name="location" placeholder="Location"></td>
    </tr>
    <tr>
      <td><input type="text" id="description" name="description" placeholder="Description"></td>
    </tr>
    <tr>
      <td><input type="text" id="startDate" name="startDate" placeholder="Start Date: MM/DD/YYYY" onfocus="(this.type='date')" onblur="(this.type='text')"></td>
    </tr>
    <tr>
      <td><input type="text" id="startTime" name="startTime" placeholder="Start Time: HH:MM AM/PM" onfocus="(this.type='time')" onblur="(this.type='text')"></td>
    </tr>
    <tr>
      <td><input type="text" id="endDate" name="endDate" placeholder="End Date: MM/DD/YYYY" onfocus="(this.type='date')" onblur="(this.type='text')"></td>
    </tr>
    <tr>
      <td><input type="text" id="endTime" name="endTime" placeholder="End Time: HH:MM AM/PM" onfocus="(this.type='time')" onblur="(this.type='text')"></td>
    </tr>
    <tr>
      <td><input type="number" id="recurrence" name="recurrence" placeholder="Recurrence: (#)"></td>
    </tr>
    <tr>
      <td><input type="email" id="attendees" name="attendees" multiple placeholder="Attendee Email(s): xyz@gmail.com, abc@gmail.com"></td>
    </tr>
    <tr>
      <td><input type="text" id="reminders" name="reminders" placeholder="Reminder notes"></td>
    </tr>
  </table>
  <br>
  <span id="error"></span>
  <input type="button" value="Submit" id="form-btn" />
</form>
</section>

